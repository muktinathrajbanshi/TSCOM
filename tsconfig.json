{
  "compilerOptions": {
    // Source and output directories
    "rootDir": "./src",
    "outDir": "./dist",

    // JavaScript version for modern browsers
    "target": "ESNext",

    // Module system for browser modules
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Generate source maps for debugging
    "sourceMap": true,

    // Enable strict type checking
    "strict": true,

    // Skip checking library files to speed up compilation
    "skipLibCheck": true
  },

  // Optional: include all TS files under src
  "include": ["src/**/*"],

  // Optional: exclude node_modules folder
  "exclude": ["node_modules"]
}
